@model IEnumerable<DateProject1.Models.AgePreference>

@{
    ViewBag.Title = "Manage Ages";
}

<h2>Age Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MinAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxAge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MinAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAge)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AgePreferenceID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AgePreferenceID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AgePreferenceID })
            </td>
        </tr>
    }

</table>
