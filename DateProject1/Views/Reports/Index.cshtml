@model IEnumerable<DateProject1.Models.Report>

@{
    ViewBag.Title = "Manage Reports";
}

<h2>Report Management</h2>

@using (Html.BeginForm("Index", "Reports", FormMethod.Get))
{
    <b> Search Options: </b> @Html.RadioButton("option", "Username") <text>Username</text> @Html.RadioButton("option", "Reason") <text>Reason</text> @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Username)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ReportID })
            </td>
        </tr>
    }

</table>