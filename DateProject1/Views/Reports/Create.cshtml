@model DateProject1.Models.Report

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    var selectID = ViewBag.AccountID;
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Report</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Username: ", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="control-label col-md-1">
                @ViewBag.AID
                @Html.ValidationMessageFor(model => model.AccountID, "", new { @class = "control-label col-md-1 " })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">

                @using (Html.BeginForm("Create", "Reports", FormMethod.Get))
                {
                    <b> Report User For: </b> <br /> @Html.RadioButton("option", "Inappropriate") <text>Inappropriate</text><br /> @Html.RadioButton("option", "Underage") <text>Underage</text><br /> @Html.RadioButton("option", "Bot") <text>Bot</text><br /> @Html.RadioButton("option", "Harassment") <text>Harassment</text><br />
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" onclick="location.href='@Request.UrlReferrer'" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "../Messages/Inbox")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}