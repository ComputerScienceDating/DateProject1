@using PagedList;
@using PagedList.Mvc;
@model IPagedList<DateProject1.Models.Person>

@{
    ViewBag.Title = "Manage";
}

<h2>Profile Management</h2>

@using (Html.BeginForm("Index", "People", FormMethod.Get))
{
    <b> Search Options: </b> @Html.RadioButton("option", "FirstName") <text>First Name</text> @Html.RadioButton("option", "LastName") <text>Last Name</text> @Html.RadioButton("option", "Gender") <text>Gender</text> @Html.RadioButton("option", "SexOrientation") <text>Sexual Orientation</text> @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
}
@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber }))
                                                                                                                                                                                                                                                                                                                             <table class="table">
                                                                                                                                                                                                                                                                                                                                 <tr>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().Occupation)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().FirstName)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().LastName)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().DOB)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().SexOrientation)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().Gender)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().NickName)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().Photo)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().Bio)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th>
                                                                                                                                                                                                                                                                                                                                         @Html.DisplayNameFor(model => model.First().AgePreference.AgePreferenceID)
                                                                                                                                                                                                                                                                                                                                     </th>
                                                                                                                                                                                                                                                                                                                                     <th></th>
                                                                                                                                                                                                                                                                                                                                 </tr>
                                                                                                                                                                                                                                                                                                                                 @foreach (var item in Model)
                                                                                                                                                                                                                                                                                                                                 {

                                                                                                                                                                                                                                                                                                                                     <tr>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.Occupation)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.FirstName)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.LastName)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.DOB)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.SexOrientation)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.Gender)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.NickName)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             <img src="data:image;base64,@System.Convert.ToBase64String(item.Photo)" width="80" height="80" />
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.Bio)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.DisplayFor(modelItem => item.AgePreference.AgePreferenceID)
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                         <td>
                                                                                                                                                                                                                                                                                                                                             @Html.ActionLink("Edit", "Edit", new { id = item.PersonID }) |
                                                                                                                                                                                                                                                                                                                                             @Html.ActionLink("Details", "Details", new { id = item.PersonID }) |
                                                                                                                                                                                                                                                                                                                                             @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
                                                                                                                                                                                                                                                                                                                                         </td>
                                                                                                                                                                                                                                                                                                                                     </tr>
                                                                                                                                                                                                                                                                                                                                 }

                                                                                                                                                                                                                                                                                                                             </table>
